<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base App Theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_100</item>
        <item name="colorPrimaryVariant">@color/primary_80</item>
        <item name="colorOnPrimary">@color/neutral_00</item>
        <item name="colorSecondary">@color/neutral_70</item>
        <item name="android:statusBarColor">@color/primary_100</item>
    </style>

    <style name="wrapper">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_white20</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- EditText Style -->
    <style name="EditTextPrimary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/neutral_100</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="corner10" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <!-- Button Style -->
    <style name="ButtonPrimary" parent="Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@color/neutral_00</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="ButtonGoogle" parent="Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/neutral_00</item>
        <item name="strokeColor">@color/primary_60</item>
        <item name="android:textColor">@color/neutral_100</item>
        <item name="shapeAppearance">@style/corner10</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:gravity">center</item>
        <item name="iconSize">32dp</item>
        <item name="iconTint">@null</item>
        <item name="iconGravity">textStart</item>
    </style>

    <!--text style-->
    <style name="heading3">
        <item name="android:textColor">@color/neutral_100</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

    <style name="paragraphRegular">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/neutral_100</item>
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <style name="paragraphRegular.bold">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/neutral_100</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

</resources>

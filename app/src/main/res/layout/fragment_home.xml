<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@color/primary_20"
    tools:context=".ui.fragment.home.HomeFragment">

    <TextView
        android:id="@+id/tvWelcomeUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_user"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/img_1"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:indeterminate="true"
        app:layout_constraintTop_toBottomOf="@id/tvWelcomeUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/iv_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/welcome_user"
        app:layout_constraintTop_toBottomOf="@id/progressBar"
        app:layout_constraintBottom_toTopOf="@id/card_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/img_2"/>

    <TextView
        android:id="@+id/tvSentimentCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sentiment_count"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/iv_welcome"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="16dp" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/tvWelcomeUser"
        app:layout_constraintTop_toBottomOf="@id/iv_welcome"
        app:layout_constraintEnd_toEndOf="@id/tvWelcomeUser"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_positif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/positif"
                style="@style/paragraphRegular.bold"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_positif_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/positif_value"
                style="@style/paragraphRegular"
                app:layout_constraintTop_toTopOf="@id/tv_positif"
                app:layout_constraintStart_toEndOf="@id/tv_positif"
                android:layout_marginStart="4dp" />

            <TextView
                android:id="@+id/tv_netral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/netral"
                style="@style/paragraphRegular.bold"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_positif"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_netral_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/netral_value"
                style="@style/paragraphRegular"
                app:layout_constraintTop_toTopOf="@id/tv_netral"
                app:layout_constraintStart_toEndOf="@id/tv_netral"
                android:layout_marginStart="4dp" />

            <TextView
                android:id="@+id/tv_negatif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/negatif"
                style="@style/paragraphRegular.bold"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_netral"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_negatif_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/netral_value"
                style="@style/paragraphRegular"
                app:layout_constraintTop_toTopOf="@id/tv_negatif"
                app:layout_constraintStart_toEndOf="@id/tv_negatif"
                android:layout_marginStart="4dp" />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>